<% content_for :navbar_classes, "Navbar--notSticky Navbar--dark Navbar--forceDarkBackground" %>

<%= render "galaxy/shared/galaxy_navbar" %>

<div class="Section GalaxyHero" data-controller="arrows-animation" data-action="scroll@window->arrows-animation#animateArrows">
  <div class="container GalaxyHero-container">
    <div class="GalaxyHero-content">
      <div class="GalaxyHero-text">
        <h1><%= t("galaxy.planet_leaders.title") %></h1>
        <h2 class="Base-title--lagoon"><%= t("galaxy.planet_leaders.subtitle") %></h2>
        <h3 class="Base-subtitle Base-subtitle--bold"><%= raw t("galaxy.planet_leaders.roles.title") %></h3>
        <% t("galaxy.planet_leaders.roles.items").each do |item| %>
          <div class="GalaxyHero-paragraph">
            <i class="material-icons" data-arrows-animation-target="arrow" data-space="1rem">arrow_forward</i>
            <p class="Base-text--lighter Base-subtitle--lightLagoon"><%= raw(item) %></p>
          </div>
        <% end %>
      </div>
      <%= image_tag 'galaxy/planet_leaders.svg', class: "GalaxyHero-image" %>
    </div>
    <i class="Base-scrollArrow material-icons">arrow_downward</i>
  </div>
</div>

<div class="Section Section--white">
  <div class="container GalaxyLeaderSection">
    <%= image_tag 'galaxy/galaxy-group-planets.svg', class: "GalaxyLeaderSection-image" %>
    <div class="GalaxyLeaderSection-columnRight">
      <p class="Base-title Base-title--4"><%= raw t("galaxy.planet_leaders.how") %></p>
      <div class="GalaxyDetails-separator"></div>
      <div class="GalaxyDetails-duration">
        <i class="material-icons">schedule</i>
        <p class="Base-title Base-title--4"><%= raw t("galaxy.planet_leaders.duration") %></p>
      </div>
    </div>
  </div>
</div>
