<% content_for :navbar_classes, "Navbar--notSticky Navbar--dark Navbar--forceDarkBackground" %>

<%= render "galaxy/shared/galaxy_navbar" %>

<div class="Section GalaxyHero" data-controller="arrows-animation" data-action="scroll@window->arrows-animation#animateArrows">
  <div class="container GalaxyHero-container">
    <div class="GalaxyHero-content">
      <div class="GalaxyHero-text">
        <h1><%= t("galaxy.comet_leaders.title") %></h1>
        <h2 class="Base-title--lagoon"><%= t("galaxy.comet_leaders.subtitle") %></h2>
        <h3 class="Base-subtitle Base-subtitle--bold"><%= raw t("galaxy.comet_leaders.purposes.title") %></h3>
        <div class="GalaxyHero-paragraph">
          <i class="material-icons" data-arrows-animation-target="arrow" data-space="1rem">arrow_forward</i>
          <p class="Base-text--lighter Base-subtitle--lightLagoon"><%= t("galaxy.comet_leaders.purposes.item") %></p>
        </div>
      </div>
      <%= image_tag 'galaxy/comet_leaders.svg', class: "GalaxyHero-image" %>
    </div>
    <i class="Base-scrollArrow material-icons">arrow_downward</i>
  </div>
</div>

<div class="HalfSection">
  <div class="HalfSection-column HalfSection-column--left">
    <div class="HalfSection-container">
      <% t("galaxy.comet_leaders.roles.titles").each do |title| %>
        <p class="Base-title Base-title--3 GalaxyDetails-title"><%= title %></p>
      <% end %>
    </div>
  </div>
  <div class="HalfSection-column HalfSection-column--right">
    <div class="HalfSection-container">
      <p class="Base-title Base-title--4"><%= raw t('galaxy.comet_leaders.roles.how') %></p>
      <div class="GalaxyDetails-separator"></div>
      <div class="GalaxyDetails-duration">
        <i class="material-icons">schedule</i>
        <p class="Base-title Base-title--4"><%= raw t("galaxy.comet_leaders.roles.duration") %></p>
      </div>
    </div>
  </div>
</div>
