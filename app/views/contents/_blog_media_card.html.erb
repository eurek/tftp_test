<div class="BlogMediaCard">
  <div class="BlogMediaCard-imageContainer">
    <%= image_tag content_cover_image(content, [500, 500]), alt: content.cover_image_alt, class: "BlogMediaCard-image" %>
    <% if content.youtube_video_id? %>
      <button class="MediaCard-videoButton Button"
        data-action="click->video-modal#openModalAndPlay"
        data-video-modal-target="contentVideoId"
        data-video-src="<%= content.youtube_video_id %>">
        <i class="material-icons">play_circle_filled</i>
      </button>
    <% end %>
  </div>
  <% if content.category.title == Category::MEDIA_TITLE %>
    <div class="BlogMediaCard-content"
      data-action="click->video-modal#openModalAndPlay"
      data-video-modal-target="contentVideoId"
      data-video-src="<%= content.youtube_video_id %>">
        <h2 class="BlogMediaCard-title"><%= content.short_title.present? ? content.short_title.truncate(100) : content.title.truncate(100) %></h2>
        <p class="Button Button--underlined">
          <%= raw t('contents.time_media.list.video_cta') %>
          <i class="material-icons">arrow_forward</i>
        </p>
    </div>
  <% else %>
    <%= link_to custom_content_path(content) do %>
      <div class="BlogMediaCard-content">
          <h2 class="BlogMediaCard-title"><%= content.short_title.present? ? content.short_title.truncate(100) : content.title.truncate(100) %></h2>
          <p class="Button Button--underlined">
            <%= raw t('contents.time_media.list.cta') %>
            <i class="material-icons">arrow_forward</i>
          </p>
      </div>
    <% end %>
  <% end %>
</div>
